<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:text="2019.4.12"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:contentPadding="12dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_goodsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="8dp"
                android:textColor="@color/black_222222"
                android:textStyle="bold"
                android:text="茄子"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_merchantName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="果蔬批发部"
                    android:textColor="@color/black_222222"
                    android:textSize="15sp"/>
                <TextView
                    android:id="@+id/tv_yieldly"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产地：四川彭州"
                    android:textColor="@color/black_222222"
                    android:textSize="15sp"/>
            </LinearLayout>
            <View
                style="@style/view_line"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_price_hight"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black_222222"
                    android:textSize="15sp"
                    android:text="3.6元/斤"/>
                <TextView
                    android:id="@+id/tv_price_middle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black_222222"
                    android:textSize="15sp"
                    android:text="3.1元/斤"/>
                <TextView
                    android:id="@+id/tv_price_low"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/black_222222"
                    android:textSize="15sp"
                    android:text="2.6元/斤"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:paddingTop="4dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    android:text="最高价"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    android:text="中间价"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/gray_999999"
                    android:textSize="15sp"
                    android:text="最低价"/>
            </LinearLayout>

            <View
                style="@style/view_line"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"/>
            <TextView
                android:id="@+id/tv_taskNme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:textSize="15sp"
                android:textColor="@color/gray_666666"
                android:text="采价任务：每日采价任务"/>
            <TextView
                android:id="@+id/tv_workerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="@color/gray_666666"
                android:text="采价人：李二蛋"/>
            <TextView
                android:id="@+id/tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:layout_marginTop="4dp"
                android:textSize="15sp"
                android:textColor="@color/gray_666666"
                android:text="采价时间：2019.4.15 09:32"/>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_pics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>
