<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guhecloud.rudez.npmarket.ui.search.SearchActivity">
    <LinearLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_marginTop="26dp"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center_vertical">

        <com.guhecloud.rudez.npmarket.widgit.EditText_Clear
            android:id="@+id/et_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="搜索"
            android:layout_marginTop="5dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:background="@drawable/shape_search_bg_gray"/>
        <TextView
            android:id="@+id/tv_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:text="搜索"
            android:textSize="16sp"
            android:src="@mipmap/icon_menu"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="搜索历史"
                android:textSize="16sp"
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/img_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/delete_search"
                android:padding="8dp"/>
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

    <View
        style="@style/view_line"
        app:layout_constraintTop_toBottomOf="@id/top_layout"/>
    <android.support.design.widget.TabLayout
        android:visibility="gone"
        android:id="@+id/tab_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/top_layout"
        android:layout_marginTop="0.2dp"
        android:padding="8dp"
        android:overScrollMode="ifContentScrolls"
        app:tabTextAppearance="@style/msgTabTextStyle"
        app:tabIndicatorHeight="4dp"
        app:tabIndicatorColor="@color/white"
        app:tabTextColor="@color/gray"
        app:tabSelectedTextColor="@color/orange"
        app:tabGravity="center"
        app:tabPadding="4dp"
        android:background="@color/white"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_searchNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        app:layout_constraintTop_toBottomOf="@id/tab_search"
        android:layout_marginTop="24dp"
        android:textColor="@color/black_222222"
        android:text="找到xx个商品"
        />

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_searchNum"
        android:layout_marginTop="24dp"/>
</android.support.constraint.ConstraintLayout>
